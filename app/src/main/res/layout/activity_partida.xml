<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Partida">

    <ImageView
        android:id="@+id/imagenPartida"
        android:layout_width="188dp"
        android:layout_height="163dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/preguntaPartida"
        android:layout_width="384dp"
        android:layout_height="182dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenPartida"
        app:layout_constraintVertical_bias="0.056" />

    <ListView
        android:id="@+id/respuestasPartida"
        android:layout_width="415dp"
        android:layout_height="207dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preguntaPartida"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/turnoPartida"
        android:layout_width="381dp"
        android:layout_height="63dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/imagenPartida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <Button
        android:id="@+id/botonLogPartida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickBotonLog"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/preguntaPartida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenPartida"
        app:layout_constraintTop_toBottomOf="@+id/turnoPartida" />

</androidx.constraintlayout.widget.ConstraintLayout>