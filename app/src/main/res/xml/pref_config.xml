<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="ajustes"
        android:title="@string/ajustes">
        <CheckBoxPreference
            android:key="temaOscuro"
            android:title="@string/temaOscuro"
            android:defaultValue="false" />

        <ListPreference
            android:defaultValue="ES"
            android:entries="@array/opcionesIdioma"
            android:entryValues="@array/valoresIdiomas"
            android:key="idioma"
            android:title="@string/idioma" />

        <ListPreference
            android:defaultValue="normal"
            android:entries="@array/opcionesColor"
            android:entryValues="@array/valoresColor"
            android:key="color"
            android:title="@string/color" />

    </PreferenceCategory>


</PreferenceScreen>